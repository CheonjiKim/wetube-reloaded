//- 이 파일은, 다른 파일에서 extends가 된다.

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
        title #{pageTitle} | #{siteName}
    body
        header
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/") Home  
                    if loggedIn
                        li
                            a(href="users/logout") Log Out
                        li
                            a(href="/my-profile") #{loggedInUser.name}의 Profile
                    else
                        li 
                            a(href="/login") Login
                        li
                            a(href="/join") Join
                    li 
                        a(href="/search") Search
                    li 
                        a(href="/videos/upload") Upload a Video

        main
            block content
            include partials/footer.pug